<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ExercÃ­cio 2 - Listas de Tarefas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <%- include('partials/header') %>
    <section class="container mt-5">
      <h1>Lista de Tarefas</h1>
      <ul class="list-group">
        <% taskLists.forEach(taskList=> { %>
          <li class="list-group d-flex align-items-center justify-content-between m-1 flex-row border p-1">

            <a href="/app/<%=taskList.id %>" class="text-body-emphasis fs-5 text-decoration-none">
              <%= taskList.title %>
            </a>
            
            <form action="/app/<%=taskList.id %>/excluir" method="post">

              <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
            </form>
          </li>
          <% }); %>
      </ul>
      <a href="/app/nova-lista" class="btn btn-primary mt-3">Nova Lista de Tarefas</a>
    </section>

    <%- include('partials/footer') %>

</body>

</html>